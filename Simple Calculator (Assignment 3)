#include <stdlib.h>

int main() {

    double answer=0;
    double num;
    char operator_;
    char stars[10]="**********";
    printf("%-20s", stars);
    printf("\n Simple Calculator---(Performs continuous operations)");
    printf("\n Enter a number: ");
    scanf("%lf", &answer);

    while (1) {

        printf("Enter operator (+,-,*,/,l(for log),s(for square root)) or Press Q to exit : ");
        scanf(" %c",&operator_);

        if (operator_ =='Q' || operator_ =='q') {

            printf("Exited from the calculator\n");
            exit(0);

        }

        else if (operator_ =='l') {

            if (answer<=0) {

                printf("Logarithm of a non-positive number is undefined\n");

            }

            else {

                answer = log10(answer);
                printf("The result of the operation is: %lf\n", answer);

            }

        }

        else if (operator_ =='s') {

            if (answer<0) {

                printf("Square root of a non-positive number is imaginary\n");

            }

            else if (answer==0) {

                printf("Square root of %d is %d\n",0,0);

            }

            else {

                answer=sqrt(answer);

                printf("The result of the operation is: %.lf\n",answer);

            }

        }

        else {



            printf("Enter next number: ");
            scanf("%lf", &num);



            switch (operator_) {

                case '+':

                    answer += num;

                    break;

                case '-':

                    answer -= num;

                    break;

                case '*':

                    answer *= num;

                    break;

                case '/':

                    if (num==0) {

                        printf("Division by zero is not defined\n");

                    }

                    else {

                        answer/=num;

                    }

                    break;

                default:

                    printf("Invalid operator...please try again\n");
                    continue;

            }

            printf("Result: %lf\n", answer);

        }

    }



    return 0;

}

